Номер 1
#include <iostream> 
 
using namespace std; 
 
int main() { 
    int n, s, d, o, p; 
    cin >> n; 
    s = n / 100; 
    d = ( n % 100) / 10; 
    o = n % 10; 
    if(s%2 == 0 && d%2 ==0 && o%2 == 0) 
    cout << "\nYes" << endl; 
    else 
    cout<< "\nNo" << endl; 
    return 0; 
}


Номер 2
// Example program
#include <iostream>
#include <string>
using namespace std;

int main()
{
char nom;

cin>> nom;
switch (nom){
    case '1':
     cout << "10 жовтня" << " 12:00.";
     break;
     case '2':
     cout << "7 жовтня" << " 14:00.";
     break;
     case '3':
     cout << "2 жовтня" << " 10:00.";
     break;
     case '4':
     cout << "5 жовтня" << " 7:00.";
     break;
     default:
     cout<<"ne pide";
}
cin.get();
cin.ignore ();
return 0;
}
